{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "CMake: Configure",
            "type": "shell",
            "command": "cmake",
            "args": [
                "-S",
                "src",
                "-B",
                "build"
            ],
            "windows": {
                "args": [
                    "-G",
                    "Visual Studio 17 2022",
                    "-A",
                    "x64",
                    "-S",
                    "src",
                    "-B",
                    "build"
                ]
            },
            "osx": {
                "args": [
                    "-G",
                    "Unix Makefiles",
                    "-S",
                    "src",
                    "-B",
                    "build"
                ]
            },
            "linux": {
                "args": [
                    "-G",
                    "Unix Makefiles",
                    "-S",
                    "src",
                    "-B",
                    "build"
                ]
            },
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "group": "build",
            "presentation": {
                "reveal": "always",
                "panel": "shared"
            },
            "problemMatcher": []
        },
        {
            "label": "CMake: Build (Debug)",
            "type": "shell",
            "command": "cmake",
            "args": [
                "--build",
                "build",
                "--config",
                "Debug"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "reveal": "always",
                "panel": "shared"
            },
            "problemMatcher": [],
            "windows": {
                "problemMatcher": ["$msCompile"]
            }
        },
        {
            "label": "CMake: Build (Release)",
            "type": "shell",
            "command": "cmake",
            "args": [
                "--build",
                "build",
                "--config",
                "Release"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "group": "build",
            "presentation": {
                "reveal": "always",
                "panel": "shared"
            },
            "problemMatcher": [],
            "windows": {
                "problemMatcher": ["$msCompile"]
            }
        },
        {
            "label": "Fast Test (Debug)",
            "dependsOn": ["CMake: Build (Debug)"],
            "dependsOrder": "sequence",
            "type": "shell",
            "command": ".venv/bin/python3",
            "args": [
                "run_all_tests.py",
                "--debug",
                "--fast"
            ],
            "windows": {
                "command": ".venv/Scripts/python.exe"
            },
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "group": {
                "kind": "test",
                "isDefault": true
            },
            "presentation": {
                "reveal": "always",
                "panel": "shared"
            },
            "problemMatcher": []
        },
        {
            "label": "Full Test (Debug)",
            "dependsOn": ["CMake: Build (Debug)"],
            "dependsOrder": "sequence",
            "type": "shell",
            "command": ".venv/bin/python3",
            "args": [
                "run_all_tests.py",
                "--debug"
            ],
            "windows": {
                "command": ".venv/Scripts/python.exe"
            },
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "group": "test",
            "presentation": {
                "reveal": "always",
                "panel": "shared"
            },
            "problemMatcher": []
        },
        {
            "label": "Full Test (Release)",
            "dependsOn": ["CMake: Build (Release)"],
            "dependsOrder": "sequence",
            "type": "shell",
            "command": ".venv/bin/python3",
            "args": [
                "run_all_tests.py",
                "--release"
            ],
            "windows": {
                "command": ".venv/Scripts/python.exe"
            },
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "group": "test",
            "presentation": {
                "reveal": "always",
                "panel": "shared"
            },
            "problemMatcher": []
        },
        {
            "label": "Clean",
            "type": "shell",
            "command": "cmake",
            "args": [
                "--build",
                "build",
                "--target",
                "clean"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "group": "build",
            "presentation": {
                "reveal": "always",
                "panel": "shared"
            },
            "problemMatcher": []
        }
    ]
}
